    eval "$__conda_setup"
else
    if [ -f "/Users/jasonhong/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/Users/jasonhong/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/Users/jasonhong/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
